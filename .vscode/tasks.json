{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Wrangler Dev",
            "type": "shell",
            "command": "wrangler dev --live-reload --port 8787",
            "isBackground": true
        },
        {
            "label": "Jekyll",
            "type": "shell",
            "command": "bundle exec jekyll build --watch --drafts",
            "isBackground": true
        },
        {
            "label": "Serve",
            "dependsOn": [
                "Jekyll",
                "Wrangler Dev"
            ],
            "dependsOrder": "parallel",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}