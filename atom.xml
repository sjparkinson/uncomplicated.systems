---
layout:
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{ site.lang }}">
  <id>{{ site.url | append: "/" }}</id>
  <title>{{ site.title | xml_escape }}</title>
  <subtitle>{{ site.description | xml_escape }}</subtitle>
  <updated>{{ site.posts.first.date | date_to_xmlschema }}</updated>
  <link href="{{ '/atom.xml' | absolute_url }}" rel="self" />
  <link href="{{ '/' | absolute_url }}" />
  <author>
    <name>{{ site.author.name | xml_escape }}</name>
  </author>
  {%- for post in site.posts %}
  {%- assign entry_url = post.url | absolute_url -%}
  {%- if post.archive_url -%}
    {%- assign entry_url = post.archive_url -%}
  {%- endif %}
  <entry>
    <id>{{ post.url | xml_escape }}</id>
    <title>{{ post.title | xml_escape }}</title>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <link href="{{ entry_url | xml_escape }}" />
    <summary>{{ post.excerpt | strip_html | normalize_whitespace | xml_escape }}</summary>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {%- endfor %}
</feed>
